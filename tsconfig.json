{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    "**/*.jsx",
    ".next/types/**/*.ts",
    "app/page.jsx",
    "app/layout.jsx",
    "app/overview/page.jsx",
    "app/hooks/use-media-query.js",
    "app/dashboard/page.jsx",
    "app/components/applications/card.jsx",
    "app/applications/[id]/page.jsx",
    "app/applications/new/page.jsx",
    "app/applications/page.jsx",
    "app/admin/page.jsx",
    "app/about/page.jsx",
    "components/sections/why-choose.jsx",
    "components/sections/internship-stories.jsx",
    "components/sections/hero.jsx",
    "components/dashboard/upcoming-deadlines.jsx",
    "components/dashboard/stats.jsx",
    "components/dashboard/recent-applications.jsx",
    "components/dashboard/header.jsx",
    "components/applications/filters.jsx",
    "components/applications/table.jsx",
    "app/otp/page.jsx",
    "actions/**/*.js" // Includes all JS files in the actions folder and its subfolders
  ],
  "exclude": ["node_modules"]
}
